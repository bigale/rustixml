# GitForAI Hook Configuration for rustixml
# Source this file before starting Claude Code: source .claude/hooks/config.env

# Python virtual environment (use gitforai-integrations venv for the hook code)
export VIRTUAL_ENV="/home/bigale/repos/gitforai-integrations/.venv"
export PATH="$VIRTUAL_ENV/bin:$PATH"

# GitForAI database location (rustixml's indexed commits)
export GITFORAI_DB_PATH="/home/bigale/repos/rustixml/.gitforai/vectordb"
export GITFORAI_REPO_PATH="/home/bigale/repos/rustixml"

# Hook configuration
export GITFORAI_MAX_RESULTS="5"
export GITFORAI_SIMILARITY_THRESHOLD="0.7"
export GITFORAI_ENABLE_DELTA="true"
export GITFORAI_ENABLE_PATTERNS="true"

# Python path to include gitforai-integrations for imports
export PYTHONPATH="/home/bigale/repos/gitforai-integrations:$PYTHONPATH"

echo "GitForAI hook environment configured for rustixml"
echo "   Database: $GITFORAI_DB_PATH"
echo "   Python: $(which python3)"
echo "   Virtual env: $VIRTUAL_ENV"
